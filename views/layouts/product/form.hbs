<h3>{{viewTitle}}</h3>

<form action="/product" method="post" autocomplete="off">
    <input type="hidden" name="_id" value="{{product._id}}">
    <div class="form-group">
        <label for="">Name</label>
        <input type="text" class="form-control" name="name" value="{{ product.name }}" required autofocus>
    </div>
    <div class="form-group">
        <label for="">Stock</label>
        <input type="number" min="1" class="form-control" name="stock" value="{{ product.stock }}" required>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info">Submit</button>
        <a href="/product/list" class="btn btn-primary">List Product</a>
    </div>
</form>